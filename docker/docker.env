# Docker Environment Variables
# This file contains environment variables for Docker Compose

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/everyday_lending
POSTGRES_DB=everyday_lending
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Clerk Authentication (Demo Keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_demo_key_for_development
CLERK_SECRET_KEY=sk_test_demo_key_for_development

# Arcjet Security (Demo Key)
ARCJET_KEY=ajkey_demo_key_for_development

# Monitoring (Disabled for development)
NEXT_PUBLIC_SENTRY_DISABLED=true
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_BETTER_STACK_SOURCE_TOKEN=
SENTRY_ORGANIZATION=
SENTRY_PROJECT=

# Optional Development Settings
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=
