{
  "name": "next-js-boilerplate",
  "type": "module",
  "author": "Ixartz (https://github.com/ixartz)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev:spotlight": "npx @spotlightjs/spotlight",
    "dev:next": "next dev --turbopack",
    "dev": "run-p db-server:file dev:*",
    "build:next": "next build",
    "build": "run-p db-server:memory build:* --race",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "check:i18n": "i18n-check -l src/locales -s en -u src -f next-intl",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db-server:file": "pglite-server --db=local.db --port=5433",
    "db-server:memory": "pglite-server --port=5433",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build",
    "verify:setup": "node scripts/verify-setup.js"
  },
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.12",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@react-email/render": "^1.4.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/nextjs": "^10.20.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.75.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-table": "^8.21.3",
    "@upstash/redis": "^1.35.6",
    "@zag-js/react": "^1.26.3",
    "@zag-js/switch": "^1.26.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.6",
    "framer-motion": "^12.23.24",
    "fuse.js": "^7.1.0",
    "inngest": "^3.44.3",
    "lucide-react": "^0.546.0",
    "melt": "^0.41.0",
    "next": "^15.5.6",
    "next-intl": "^4.3.12",
    "pg": "^8.16.3",
    "plaid": "^39.0.0",
    "postgres": "^3.4.7",
    "posthog-js": "^1.276.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-email": "^4.3.1",
    "react-hook-form": "^7.65.0",
    "react-hotkeys-hook": "^5.2.1",
    "resend": "^6.2.0",
    "sonner": "^2.0.7",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "xstate": "^5.23.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@chromatic-com/playwright": "^0.12.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@electric-sql/pglite-socket": "^0.0.16",
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@faker-js/faker": "^10.1.0",
    "@lingual/i18n-check": "^0.8.12",
    "@next/bundle-analyzer": "^15.5.6",
    "@next/eslint-plugin-next": "^15.5.6",
    "@playwright/test": "^1.56.1",
    "@spotlightjs/spotlight": "^4.1.4",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/nextjs-vite": "^9.1.13",
    "@storybook/test": "^9.0.0-alpha.2",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^24.8.1",
    "@types/pg": "^8.15.5",
